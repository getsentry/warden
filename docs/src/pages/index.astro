          <p>Terminal output or PR comments</p>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  .hero {
    text-align: center;
    padding: 3rem 0 2rem;
  }

  .tagline {
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
    line-height: 1.2;
  }

  .tagline-sub {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin: 1rem 0 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: opacity 0.15s ease;
  }

  .btn-primary {
    background: #fff;
    color: #000;
  }

  .btn-primary:hover {
    opacity: 0.9;
    color: #000;
  }

  .section {
    margin-top: 3rem;
  }

  .section h2 {
    margin-bottom: 1rem;
  }

  .section h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .two-ways {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin: 1.5rem 0;
  }

  .way {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border);
    border-radius: 8px;
  }

  .way h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .way > p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .two-ways {
      grid-template-columns: 1fr;
    }
  }

  .showcase {
    margin-top: 3rem;
  }

  .showcase h2 {
    margin-bottom: 1.5rem;
  }

  .architecture {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }

  .arch-step {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid var(--border);
    border-radius: 8px;
    flex: 1;
    min-width: 140px;
  }

  .arch-num {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    background: #fff;
    color: #000;
    border-radius: 50%;
    font-size: 0.875rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  .arch-step strong {
    display: block;
    margin-bottom: 0.25rem;
  }

  .arch-step p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .arch-arrow {
    color: var(--text-tertiary);
    font-size: 1.25rem;
  }

  @media (max-width: 768px) {
    .tagline {
      font-size: 1.5rem;
    }

    .architecture {
      flex-direction: column;
    }

    .arch-arrow {
      transform: rotate(90deg);
    }

    .arch-step {
      width: 100%;
    }
  }
</style>
